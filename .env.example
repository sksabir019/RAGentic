# ============ Application Settings ============
NODE_ENV=development
APP_NAME=RAGentic
APP_VERSION=1.0.0
LOG_LEVEL=debug

# ============ Frontend ============
REACT_APP_API_URL=http://localhost:3000/api
REACT_APP_WS_URL=ws://localhost:3000
REACT_APP_ENV=development

# ============ Backend (API Gateway) ============
BACKEND_PORT=3000
BACKEND_HOST=localhost

# ============ Database ============
# Choose database type: 'postgres' or 'mongodb'
DATABASE_TYPE=postgres

# PostgreSQL Configuration (when DATABASE_TYPE=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=ragentic_dev
DB_SSL=false

# MongoDB Configuration (when DATABASE_TYPE=mongodb)
MONGO_URI=mongodb://mongodb:27017/ragentic
MONGODB_USER=root
MONGODB_PASSWORD=root123
MONGODB_ADMIN_DB=admin

# ============ Redis (Sessions & Caching) ============
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# ============ JWT Authentication ============
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRY=7d

# ============ AWS S3 (File Storage) ============
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=ragentic-uploads
S3_URL_EXPIRY=900

# ============ Vector Store (pgvector) ============
VECTOR_DIMENSION=1536
DOCUMENT_INGESTION_CONCURRENCY=2
DOCUMENT_INGESTION_RETRY_ATTEMPTS=3
DOCUMENT_INGESTION_RETRY_DELAY_MS=5000
DOCUMENT_INGESTION_RETAIN_FAILED=10

# ============ LLM Settings ============
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Alternative: Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-key
ANTHROPIC_MODEL=claude-3-sonnet-20241022

# ============ Agent Services ============
INGESTION_AGENT_URL=http://ingestion-agent:3001
QUERY_PARSER_AGENT_URL=http://query-parser-agent:3002
RETRIEVAL_AGENT_URL=http://retrieval-agent:3003
RANKING_AGENT_URL=http://ranking-agent:3004
GENERATION_AGENT_URL=http://generation-agent:3005
VALIDATION_AGENT_URL=http://validation-agent:3006

# ============ CrewAI (Python) ============
CREW_CONTROL_URL=http://crew-control:4000
CREW_CONTROL_HOST=localhost
CREW_CONTROL_PORT=4000

# ============ Message Queue ============
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672
KAFKA_BROKERS=kafka:9092

# ============ Rate Limiting ============
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# ============ CORS Settings ============
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# ============ Monitoring & Logging ============
SENTRY_DSN=
LOG_FORMAT=json
ENABLE_METRICS=true

# ============ File Upload Settings ============
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,docx,txt,csv
UPLOAD_TIMEOUT=300000

# ============ Chunking Settings ============
CHUNK_SIZE_TOKENS=512
CHUNK_OVERLAP_TOKENS=50
TOKENIZER=tiktoken

# ============ Embedding Settings ============
EMBEDDING_BATCH_SIZE=100
EMBEDDING_TIMEOUT=30000

# ============ Search Settings ============
SEARCH_TOP_K=10
SEARCH_TYPE=hybrid
BM25_WEIGHT=0.3
SEMANTIC_WEIGHT=0.7

# ============ Generation Settings ============
GENERATION_TEMPERATURE=0.7
GENERATION_MAX_LENGTH=2000
GENERATION_TIMEOUT=30000

# ============ Validation Settings ============
VALIDATION_RULES=hallucination_detection,fact_verification,citation_check,coherence_check
VALIDATION_TIMEOUT=15000
CONFIDENCE_THRESHOLD=0.7

# ============ Development Settings ============
MOCK_AGENTS=false
DEBUG_MODE=false
TRACE_REQUESTS=true
